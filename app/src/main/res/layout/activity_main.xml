<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.rocflying.circleprogressview.ui.CircleProgressView
        android:id="@+id/progess_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        app:bg_color="@color/bgColor"
        app:progress_color="@color/pgColor"
        app:start_color="@color/color_F7B063"
        app:end_color="@color/color_F5533D"/>


    <Button
        android:id="@+id/btn_switch_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_btn_switch_color"/>

</LinearLayout>